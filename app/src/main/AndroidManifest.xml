<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kamikadze328.memo">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="osmdroid.userAgent"
            android:value="${applicationId}" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="com.kamikadze328.memo.background.location.OsmdroidInitializer"
                android:value="androidx.startup" />
        </provider>

        <activity
            android:name=".feature.home.HomeActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="com.kamikadze328.memo"
                    android:path="/home"
                    android:scheme="codelab" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.memo.create.CreateMemoActivity"
            android:exported="false"
            android:label="@string/new_memo"
            android:parentActivityName=".feature.home.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".feature.choose.location.ChooseLocationActivity"
            android:exported="false"
            android:label="@string/choose_location_title"
            android:parentActivityName=".feature.memo.create.CreateMemoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".feature.memo.details.ViewMemoActivity"
            android:exported="true"
            android:parentActivityName=".feature.home.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="com.kamikadze328.memo"
                    android:path="/detail"
                    android:scheme="codelab" />
            </intent-filter>
        </activity>

        <service
            android:name=".background.location.LocationService"
            android:exported="false"
            android:foregroundServiceType="location" />

    </application>

</manifest>